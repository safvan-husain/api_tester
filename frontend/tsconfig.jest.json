{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx", // or "preserve" if you handle JSX transformation elsewhere for tests
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
